<Window x:Class="ContextMenuRestorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContextMenuRestorer"
        mc:Ignorable="d"
        Title="Windows 11 Context Menu Restore" Height="154" Width="270" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Restore_button" Content="Restore" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Click="Restore_button_Click"/>
        <TextBlock Margin="10,11,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" Width="40" Height="21" VerticalAlignment="Top"><Run Language="pl-pl" Text="Status:"/></TextBlock>
        <TextBlock x:Name="statusTextBlock" HorizontalAlignment="Left" Margin="50,10,0,0" TextWrapping="Wrap" Width="210" Height="17" VerticalAlignment="Top" FontWeight="Bold"><Run Language="pl-pl" Text="New Context Menu"/></TextBlock>
        <Button x:Name="About_button" Content="About" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Click="About_button_Click"/>

    </Grid>
</Window>
